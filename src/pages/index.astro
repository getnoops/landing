---
// Component Imports
import {
  Hero,
  Footer,
  Streamline,
  Environment,
  YourTech,
  TopBar,
  AWSManaged,
} from "../components";

import HomeContent from "../content/Home";

import Body from "../layouts/Body.astro";

const { hero, bridge } = HomeContent;

// Our Story
// DevOps slowing you down?
// Streamline your pipeline
// Use Your Tech
// Any environment any time
// Observe more

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<Body>
  {/* Hero */}
  <div class="bg-noops-50">
    <TopBar />

    <Hero description={hero.description} client:load />

    <AWSManaged client:visible />

    <Streamline
      title={bridge.title}
      description={bridge.description}
      client:visible
    />

    <YourTech client:visible />

    <Environment client:visible />

    <Footer />
  </div>
</Body>
